.search-bar {
  width: 100%;
  height: 88rpx;
  background: #0eb6ff;
  /* display: flex; */
}

.search-bar > view {
  display: inline-block;
  vertical-align: middle;
}

.search-bar-position image {
  width: 44rpx;
  height: 44rpx;
  margin: 6rpx 28rpx;
}

.search-bar-input {
  width: 544rpx;
  height: 66rpx;
  background-color: #fff;
  border-radius: 33rpx;
  font-size: 32rpx;
  color: #cbcbcb;
  text-align: center;
  line-height: 66rpx;
}

.search-bar-input image {
  width: 32rpx;
  height: 32rpx;
}

.search-bar-scan image {
  width: 50rpx;
  height: 50rpx;
  margin: 6rpx 28rpx;
}


/* //轮播图样式 */
.banner image{
  height: 150px;
}

.system-tips{
width: 100%;
height: 80rpx;
background-color: #fff4d1;
color: #878887;
font-size: 30rpx;
overflow: hidden;
}
.system-tips{
  display: flex;
}
.system-tips image{
  width: 30rpx;
  height: 30rpx;
  margin: 25rpx;
}
.system-tips swiper{
  width: 670rpx;
  height: 30px;
  line-height: 80rpx;
}
.system-tips swiper swiper-item{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goodsSorts{
  margin: 20rpx auto;
}

.goodsSorts ul{
  width: 700rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.goodsSorts ul li{
  width: 20%;
  text-align: center;
}
.goodsSorts ul li view{
  width: 100rpx;
  height: 100rpx;
  /* background: red; */
  border-radius: 50%;
  margin: 10rpx auto;
}
.goodsSorts ul li p{
  font-size: 28rpx;
}
.goodsSorts ul image{
  width: 104rpx;
  height: 104rpx;
  transform: rotate(-45deg);
}

/*今日大赏样式*/

.page_bd_scrollx_section .scrollx_section_title {
  width: 682rpx;
  height: 70rpx;
  margin-top: 70rpx;
  /* outline: 1px solid red; */
  margin-left: 38rpx;
  line-height: 70rpx;
}

.page_bd_scrollx_section .scrollx_section_title image {
  width: 50rpx;
  height: 60rpx;
}

.page_bd_scrollx_section .scrollx_section_title_left p {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 20rpx;
  line-height: 70rpx;
}

.page_bd_scrollx_section .scrollx_section_title_right p {
  font-size: 24rpx;
  font-weight: bold;
}

.page_bd_scrollx_section .scrollx_section_title_right a {
  width: 34rpx;
  height: 34rpx;
  background-color: #222;
  border-radius: 18rpx;
  display: inline-block;
  margin-top: 16rpx;
  margin-left: 8rpx;
}

.page_bd_scrollx_section .scrollx_section_title_right a:after {
  content: '';
  float: right;
  margin-right: 12rpx;
  margin-top: 10rpx;
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-top: 1px solid #fff;
  border-right: 1px solid #fff;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}

/*首页今日王牌大赏滚动的商品*/

.scrollx_section_content {
  width: 100%;
  white-space: nowrap;
}

.scrollx_section_content_item {
  width: 626rpx;
  height: 304rpx;
  /* outline: 1px solid red; */
  display: inline-block;
  margin-left: 20rpx;
  overflow: hidden;
}

.scrollx_section_content_item.last {
  margin-right: 20rpx;
}

.scrollx_section_content .scrollx_section_content_item .scrollx_section_content_item_wrapper {
  width: 572rpx;
  height: 222rpx;
  /* outline: 1px solid purple; */
  margin-left: 30rpx;
  margin-top: 40rpx;
  overflow: hidden;
}

.view_wrapper_image {
  width: 210rpx;
  height: 180rpx;
  margin-top: 20rpx;
}

.view_wrapper_image image {
  width: 210rpx;
  height: 180rpx;
}

.view_wrapper_intro {
  width: 336rpx;
  height: 222rpx;
  /* outline: 1px solid green; */
  float: right;
  margin-top: -200rpx;
  overflow: hidden;
}

.wrapper__intro__title {
  width: 318rpx;
}

.wrapper_intro_title text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wrapper_intro_content {
  width: 166rpx;
  height: 64rpx;
}

.scrollx_section_content_item text {
  display: block;
}

.wrapper_intro_title text:nth-child(2n) {
  font-size: 22rpx;
  color: #a9a9a9;
  font-weight: blod;
}

.wrapper_intro_title text:nth-child(2n+1) {
  font-size: 28rpx;
  font-weight: blod;
  color: #393939;
}

.wrapper_intro_content text:nth-child(2n+1) {
  font-size: 34rpx;
  font-weight: 800;
  color: #434343;
}

.wrapper_intro_content text:nth-child(2n) {
  font-size: 22rpx;
  color: #a5a5a5;
}

.wrapper_intro_price {
  width: 100%;
  display: block;
  overflow: hidden;
  margin-top: 80rpx;
}

.wrapper_intro_price a {
  color: #ff7c2a;
  font-size: 26rpx;
  font-weight: 600;
}

.wrapper_intro_price a:nth-child(2) {
  color: #a6a6a6;
  font-size: 24rpx;
}

.wrapper_intro_price a:nth-child(3) {
  color: #25a4ff;
  font-size: 40rpx;
  float: right;
  font-weight: 800;
  /* margin-top: 6rpx; */
  margin-right: 30rpx;
}
